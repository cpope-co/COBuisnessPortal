{
  "name": "cobusiness-portal",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "// Environment": "",
    "node:check": "node --version && echo Expected: && type .nvmrc",
    "node:env": "set NODE_OPTIONS=--max-old-space-size=4096 --experimental-webstreams",
    "// Development": "",
    "start": "ng serve --proxy-config src/proxy.conf.json --open",
    "// Building": "",
    "build": "ng build",
    "build:dev": "ng build --output-path=dist/cobusiness-portal",
    "build:dev:network": "ng build --output-path=dist/network-deploy",
    "build:dev:network:deploy": "npm run build:dev:network && robocopy dist/network-deploy \\\\owen400\\cnodevsrv /MIR /R:3 /W:5 || exit 0",
    "build:prod": "ng build --configuration=production",
    "// Testing - Unit": "",
    "test": "ng test --karma-config karma.conf.js --watch=true",
    "test:ci": "ng test --watch=false  --code-coverage",
    "test:ci:consolidate": "npm run test:ci && powershell -ExecutionPolicy Bypass -File scripts/consolidate-unit-reports.ps1",
    "test:ci:force": "npm run test:ci:safe || echo 'Unit tests failed but continuing...'",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "// Testing - E2E": "",
    "e2e": "cypress run --headless --reporter cypress-mochawesome-reporter",
    "e2e:open": "cypress open",
    "e2e:watch": "cypress run",
    "e2e:force": "npm run e2e || echo 'E2E tests failed but continuing...'",
    "validate:fixtures": "cypress run --spec 'cypress/e2e/fixture-validation.cy.ts' --headless",
    "// Testing - Combined": "",
    "test:all": "npm run test:ci:consolidate && npm run e2e",
    "test:all:force": "npm run test:ci:force && npm run e2e:force",
    "// Reports": "",
    "reports:open:coverage": "start coverage/index.html",
    "reports:open:e2e": "start e2e/reports/index.html",
    "reports:open:unit": "start reports/unit-tests/index.html",
    "reports:copy": "powershell -ExecutionPolicy Bypass -File scripts/copy-reports.ps1",
    "deploy:copy": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-dev.ps1",
    "// Deployment - Development": "",
    "deploy:dev": "npm run build:dev && npm run test:all && npm run reports:copy && npm run deploy:copy",
    "deploy:dev:force": "npm run build:dev && npm run test:all:force && npm run reports:copy && npm run deploy:copy",
    "deploy:dev:quick": "npm run build:dev && npm run reports:copy && npm run deploy:copy",
    "// Deployment - Production": "",
    "deploy:prod": "npm run build:prod && npm run test:all",
    "deploy:prod:force": "npm run build:prod && npm run test:all:force",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.2",
    "@angular/cdk": "^21.0.1",
    "@angular/common": "^21.0.2",
    "@angular/compiler": "^21.0.2",
    "@angular/core": "^21.0.2",
    "@angular/forms": "^21.0.2",
    "@angular/material": "^21.0.1",
    "@angular/platform-browser": "^21.0.2",
    "@angular/platform-browser-dynamic": "^21.0.2",
    "@angular/router": "^21.0.2",
    "bootstrap": "^5.3.7",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "ng-recaptcha-2": "^21.0.1",
    "ngx-mask": "^20.0.3",
    "rxjs": "~7.8.2",
    "tslib": "^2.3.0",
    "vite": "^7.2.6",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.2",
    "@types/jasmine": "~5.1.8",
    "@web/test-runner": "^0.20.2",
    "baseline-browser-mapping": "^2.9.11",
    "cypress": "^15.5.0",
    "cypress-mochawesome-reporter": "^3.8.4",
    "husky": "^9.1.7",
    "jasmine-core": "^5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-spec-reporter": "^0.0.36",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "qs": "^6.14.1"
  },
  "engines": {
    "node": ">=18.0.0 <=22.20.0"
  }
}
